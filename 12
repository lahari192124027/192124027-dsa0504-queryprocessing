import pandas as pd
import numpy as np

# Create a DataFrame with random values
data = np.random.randn(10, 4)
df = pd.DataFrame(data, columns=['Column1', 'Column2', 'Column3', 'Column4'])

# Create a Styler object to set the background color to black and font color to yellow
styled_df = df.style.set_properties(**{'background-color': 'black', 'color': 'yellow'})

# Display the styled DataFrame
styled_df
